@model ProductListViewModel

<h5>Selam sana demir pençe</h5>

@if (Model.Products.Count() == 0)
{
    <p>Ürün bulunamadı</p>
}

@foreach (var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <p>@p.Price</p>
        <p>@p.Category</p>
    </div>
}

<div page-model="@Model.PageInfo" page-action="Index"></div>